{
  "name": "local-agent-ui",
  "version": "1.0.0",
  "description": "Self-hosted Docker for local AI agents with MCP support",
  "private": true,
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently --names server,client --prefix [\\{name\\}] --kill-others-on-exit \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "dev:clean": "rm -rf node_modules/*/dist .parcel-cache && npm run dev",
    "build": "npm run build -w shared && npm run build -w server && npm run build -w client",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "start": "npm run start -w server",
    "start:dev": "npm run start:dev -w server",
    "start:test": "npm run start:test -w server",
    "lint": "npm run lint -ws",
    "typecheck": "npm run typecheck -ws",
    "docker:build": "docker build -t local-agent-ui .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data local-agent-ui"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.76.0",
    "@modelcontextprotocol/sdk": "^1.26.0"
  }
}

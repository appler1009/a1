{
  "name": "local-agent-ui",
  "version": "1.0.0",
  "description": "Self-hosted Docker for local AI agents with MCP support",
  "private": true,
  "workspaces": [
    "shared",
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run build -w shared && npm run build -w server && npm run build -w client",
    "start": "npm run start -w server",
    "lint": "npm run lint -ws",
    "typecheck": "npm run typecheck -ws",
    "docker:build": "docker build -t local-agent-ui .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd)/data:/app/data local-agent-ui"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

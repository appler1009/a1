# Environment Configuration
# Copy this file to .env.development, .env.test, or .env.production and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_PATH=./data/metadata.db

# Storage Configuration
# Options: fs (filesystem), sqlite, s3
STORAGE_TYPE=fs
STORAGE_ROOT=./data
# S3 Configuration (if STORAGE_TYPE=s3)
# STORAGE_BUCKET=
# STORAGE_ENDPOINT=
# STORAGE_REGION=

# Authentication
AUTH_SECRET=your-secret-key-here

# LLM Configuration
# Options: grok, openai, anthropic
LLM_PROVIDER=grok
DEFAULT_MODEL=grok-4-1-fast-reasoning

# Grok API (xAI)
GROK_API_KEY=

# OpenAI API
OPENAI_API_KEY=

# Anthropic API (Claude)
ANTHROPIC_API_KEY=

# Google OAuth (for MCP servers like google-docs-mcp)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5173/api/auth/google/callback

# GitHub OAuth (for MCP servers like github-mcp)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:5173/api/auth/github/callback

# Gmail Configuration
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:5173/api/gmail/callback

# Router Configuration
ROUTER_ENABLED=false
